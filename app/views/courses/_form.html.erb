      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="font-family: 'Tajawal'; font-size: 1.5em">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field" style="font-family: 'Tajawal'; font-size: 1.5em">
    <%= form.label :description %>
    <%= form.text_field :description, required: true  %>
  </div>

  <div class="field" style="font-family: 'Tajawal'; font-size: 1.5em">
    <%= form.label :city %>
    <%= form.text_field :city, required: true  %>
  </div>

  <div class="field" style="font-family: 'Tajawal'; font-size: 1.5em">
    <%= form.label :state %>
    <%= form.text_field :state, required: true  %>
  </div>

  <div class="field" style="font-family: 'Tajawal'; font-size: 1.5em">
  <%= form_for(@course) do |f| %>

    <%= f.label :difficulty %>
      <%= f.select :difficulty, [ 'Easy','Intermediate','Hard' ], {:include_blank => 'Select One'}, required: true  %><br>


      <div class="field">
        <%= form.label :image %>
        <%= form.file_field :image %>
      </div>
    <%= f.submit %><br>
  <% end %>

<% end %>
</div>