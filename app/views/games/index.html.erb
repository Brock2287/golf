<p id="notice"><%= notice %></p>
<a <%= link_to 'Back', welcome_index_url %></a>
<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th>Gamedatetime</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if user_signed_in? %>
      <% @games.each do |game| %>
      <tr>
        <td><%= game.user.name %></td>
        <td><%= game.course.name %></td>
        <td><%= game.gamedatetime %></td>
        <td><%= game.score %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
