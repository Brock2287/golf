                    <form>
                      <div class="form-row">
                        <div class="form-group col-md-6">
                          <label for="username">Name</label>
                          <%= f.text_field :name, autofocus: true , class: "form-control",
                                            type: "text", id: "username", placeholder: "Name", required: true %>
                        </div>
                        <div class="form-group col-md-6">
                          <label for="inputEmail4">Email</label>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",
                                            type: "email", id: "inputEmail14", placeholder: "example@email.xxx",
                                            required: true %>
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group col-md-6">
                          <label for="inputPassword4">Password</label>
                          <%= f.password_field :password, autofocus: true, class: "form-control",
                                               type: "password", id: "inputPassword4", placeholder: "password",
                                               autocomplete: "off", required: true %>
                          <% if @minimum_password_length %>
                            <em><%= @minimum_password_length %> characters minimum</em>
                          <% end %>
                        </div>
                        <div class="form-group col-md-6">
                          <label for="confirmPassword4">Password Confirmation</label>
                          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",
                                               type: "password", id: "confirmPassword4",
                                               placeholder: "confirm password", required: true %>
                        </div>
                      </div>

                      <div class="form-row">
                        <div class="form-group col-md-6">
                          <label for="inputCity">City</label>
                          <%= f.text_field :city, autocomplete: "off", type: "text", class: "form-control",
                                           id: "inputCity", placeholder: "City", required: true %>
                        </div>

                        <div class="form-group col-md-6">
                          <label for="inputState">State</label>
                          <%= f.text_field :state, autocomplete: "off", type: "text", class: "form-control",
                                           id: "inputState", placeholder: "State", required: true %>
                        </div>
                      </div>

                      <div class="form-group">
                        <label for="updateBio">Bio</label>
                        <%= f.text_field :bio, autocomplete: "off", class: "form-control",
                                         type: "text", id: "updateBio", rows: "3", placeholder: "Something about you" %>
                      </div>
                      <div class="custom-file">
                        <%= f.file_field :image, type: "file", class: "custom-file-input", id: "validatedCustomFile" %>
                        <label class="custom-file-label" for="validatedCustomFile">Upload a Profile pic...</label>
                        <div class="invalid-feedback">Example invalid custom file feedback</div>
                      </div>
                      <div class="actions" style="padding-top: 10px">
                        <%= f.submit "Sign Up", class: "btn btn-primary" %>
                      </div></form>
        <% end %>

