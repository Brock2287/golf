      </div>

      <div class="form-group col-md-4">
        <label for="inputCity">City</label>
        <%= f.text_field :city, autocomplete: "off", type: "text", class: "form-control", id: "inputCity" %>
      </div>

      <div class="form-group col-md-3">
        <label for="inputState">State</label>
